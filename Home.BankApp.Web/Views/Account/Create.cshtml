@model UserListModel;
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-6">
        <h3>Hesap Eklenecek Kişinin Bilgileri</h3>
        <p> Kullanıcının Adı : @Model.Name</p>
        <p> Kullanıcının Soyadı : @Model.Surname</p>
        <p> Kullanıcının Aktif Hesap Sayısı :<getAccountCount app-user-id="@Model.Id"></getAccountCount> </p>
    </div>
    <div class="col-6">
        <h3>Hesap Bilgileri</h3>
        <form asp-action="Create" asp-controller="Account" method="post">
            <input type="hidden" name="ApplicationUserId" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label">Hesap Numarası : </label>
                <input type="number" class="form-control" name="AccountNumber" value="" />
            </div>
            <div class="mb-3">
                <label class="form-label">Hesap Bakiyesi : </label>
                <input type="number" class="form-control" name="Balance" value="" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>



